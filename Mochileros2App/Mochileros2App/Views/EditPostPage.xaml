<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mochileros2App.Views.EditPostPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Comentario" FontSize="14" HorizontalOptions="FillAndExpand"/>
            <Entry x:Name="opinionEntry" HorizontalOptions="FillAndExpand"/>
            <Button Text="Actualizar" Clicked="UpdateClicked" HorizontalOptions="FillAndExpand"/>
            <Button Text="Eliminar" Clicked="DeleteClicked" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>