<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mochileros2App.OpinionPage"
             Title="Opiniones">


    <!--Form to add opinions-->

    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Ingrese su comentario" FontSize="14"/>
            <Entry x:Name="opinionEntry"/>
            <Button Text="Guardar" Clicked="AddOpinion_Clicked"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>